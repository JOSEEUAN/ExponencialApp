<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llComponentesDu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Distribucion Exponencial"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Variable observada (X):"
            android:textSize="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:hint="Datos Observados"
            android:inputType="text"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Minimo"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="64dp"
                android:layout_height="45dp"

                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mayor"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="64dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="NÃºmero de repeticiones:"
            android:textSize="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="135dp"
            android:layout_height="45dp"

            android:layout_gravity="clip_vertical"
            android:hint="Numero de veces"
            android:textSize="12dp" />

    </LinearLayout>

    <Button
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="121dp"
        android:layout_marginBottom="164dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="recuperarDatosFormulario"
        android:text="CALCULAR "
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>